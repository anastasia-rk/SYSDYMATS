%%
my_init;
dT = 0.1;
x = 1:dT:100;
y = sin(x);
y1 = cos(x);
y3 = -sin(x);
%%
for t=2:length(x)-1;
    y2(t-1) = delta_operator(1,y,t,dT,'backward');
end

for t=3:length(x)-2;
    y4(t-1) = delta_operator(1,y,t,dT,'backward');
end
%%
figure;
subplot(1,2,1)
plot(y,'r'); hold on;
plot(y1,'k'); hold on;
plot(y2,'b'); hold on;
legend('function','analytical','$\delta$-operator')
title('\lambda = 1');
subplot(1,2,1)
plot(y,'r'); hold on;
plot(y3,'k'); hold on;
plot(y4,'b'); hold on;